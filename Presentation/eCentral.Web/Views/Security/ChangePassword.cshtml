@model ChangePasswordModel
@{
    var pageHeading = "Change Password";
    Html.AddTitleParts(pageHeading);
    ViewBag.Heading = pageHeading;
}
<div class="row-fluid">
    <div class="span12">
        @using (Html.BeginRouteForm(SystemRouteNames.ChangePassword, FormMethod.Post, new { @class = "form-horizontal" }))
        {
            <div class="box hover">
                <div class="title">
                    <h4>
                        <span class="icon16 icomoon-icon-lock green"></span><span>Security</span>
                    </h4>
                </div>
                <div class="content">
                    <div class="form-row row-fluid">
                        <div class="span12">
                            <div class="row-fluid">
                                @Html.LabelFor(m => m.OldPassword, new { @class = "span2" })
                                @Html.TextBoxFor(m => m.OldPassword, new { @class = "span10" })
                                @Html.ValidationMessageFor(m => m.OldPassword)
                            </div>
                        </div>
                    </div>
                    <div class="form-row row-fluid">
                        <div class="span12">
                            <div class="row-fluid">
                                @Html.LabelFor(m => m.NewPassword, new { @class = "span2" })
                                @Html.TextBoxFor(m => m.NewPassword, new { @class = "span10" })
                                @Html.ValidationMessageFor(m => m.NewPassword)
                            </div>
                        </div>
                    </div>
                    <div class="form-row row-fluid">
                        <div class="span12">
                            <div class="row-fluid">
                                @Html.LabelFor(m => m.ConfirmNewPassword, new { @class = "span2" })
                                @Html.TextBoxFor(m => m.ConfirmNewPassword, new { @class = "span10" })
                                @Html.ValidationMessageFor(m => m.ConfirmNewPassword)
                            </div>
                        </div>
                    </div>
                    <div class="form-actions">
                        <button type="submit" class="btn btn-info">
                            <span class="icon16 icomoon-icon-checkmark white"></span>Change Password</button>
                    </div>
                </div>
            </div>     
        }
    </div>
    <!-- End .span12 -->
</div>
