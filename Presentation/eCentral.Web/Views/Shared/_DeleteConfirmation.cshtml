@model eCentral.Web.Framework.Mvc.ConfirmationModel
@using (Html.BeginForm(Model.ActionName, Model.ControllerName, new { rowId = Model.RowId }))
{
    <div>
        <p>
            @T("Admin.Common.DeleteConfirmation")
        </p>
        <div class="form-actions">
            <span class="t-button" onclick="closeModalWindow();">@T("Admin.Common.NoCancel")</span>
            <input type="submit" class="t-button" value="@T("Admin.Common.Delete")" />
        </div>
    </div>
}

<script type="text/javascript">
    @Model.ActionScript
</script>