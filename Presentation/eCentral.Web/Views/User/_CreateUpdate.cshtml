@model UserModel
@using (Html.BeginForm(null, null, FormMethod.Post, new { @class = "form-horizontal" }))
{ 
    @Html.HiddenFor(model => model.RowId)
    @Html.HiddenFor(model => model.IsEdit)
    <div class="box hover">
        <div class="title">
            <h4>
                <span class="icon16 brocco-icon-grid"></span><span>User details</span>
            </h4>
            <a href="#" class="minimize">Minimize</a>
        </div>
        <div class="content">
            <div class="form-row row-fluid">
                <div class="span12">
                    <div class="row-fluid">
                        @Html.LabelFor(m => m.Username, new { @class = "span2" })
                        @Html.TextBoxFor(m => m.Username, new { @class = "span10 readonly" })
                        @Html.ValidationMessageFor(m => m.Username)
                    </div>
                </div>
            </div>
            <div class="form-row row-fluid">
                <div class="span12">
                    <div class="row-fluid">
                        @Html.LabelFor(m => m.FirstName, new { @class = "span2" })
                        @Html.TextBoxFor(m => m.FirstName, new { @class = "span10" })
                        @Html.ValidationMessageFor(m => m.FirstName)
                    </div>
                </div>
            </div>
            <div class="form-row row-fluid">
                <div class="span12">
                    <div class="row-fluid">
                        @Html.LabelFor(m => m.LastName, new { @class = "span2" })
                        @Html.TextBoxFor(m => m.LastName, new { @class = "span10" })
                        @Html.ValidationMessageFor(m => m.LastName)
                    </div>
                </div>
            </div>
            <div class="form-row row-fluid">
                <div class="span12">
                    <div class="row-fluid">
                        @Html.LabelFor(m => m.Mobile, new { @class = "span2" })
                        @Html.TextBoxFor(m => m.Mobile, new { @class = "span10 mask mask-mobile" })
                        @Html.ValidationMessageFor(m => m.Mobile)
                    </div>
                </div>
            </div>
            <div class="form-row row-fluid">
                <div class="span12">
                    <div class="row-fluid">
                        <div class="span2">&nbsp;</div>
                        <div class="span10 controls">
                            <div class="iToggle-button left marginR10">
                                <input type="checkbox" @if(Model.IsAdministrator) {<text>checked="checked"</text>}  class="nostyle" data-element="@Html.FieldIdFor(m => m.IsAdministrator)" />
                            </div>
                            @T("Users.Fields.Administrator")
                            @Html.HiddenFor(m => m.IsAdministrator)
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="form-actions">
            <button type="submit" class="btn btn-info marginR10">
                <span class="icon16 icomoon-icon-checkmark white"></span>@T("Common.Save")</button>
            <button type="button" class="btn btn-danger href-action" data-href="@Url.Action(SystemRouteNames.Index)">
                <span class="icon16 icomoon-icon-close white"></span>@T("Common.Cancel")</button>
        </div>
    </div>
    
}