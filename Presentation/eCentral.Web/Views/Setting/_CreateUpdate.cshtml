@model SettingModel
<div class="modal-header">
    <button type="button" class="close" data-dismiss="modal">
        <span class="icon12 minia-icon-close"></span>
    </button>
    <h3>
        @if (Model.IsEdit)
        { <text>Edit setting</text> }
        else
        { <text>Add new setting</text>}
        <img id="modal-window-loader" class="hide" src="@Url.ImageUrl("loaders/horizontal/018.gif")" width="80" height="10" alt=""/>
    </h3>
</div>
@using (Ajax.BeginForm(null, null, new AjaxOptions { HttpMethod = "Post", OnComplete = "onComplete", LoadingElementId = "modal-window-loader" }, new { @class = "form-horizontal" }))
{
    @Html.HiddenFor(model => model.RowId)
    @Html.HiddenFor(model => model.IsEdit)                    
    <div class="modal-body">
        <div class="paddingT15 paddingB15">
            <div class="row-fluid">
                <div class="span10">
                    <div class="form-row row-fluid">
                        <div class="span12">
                            <div class="row-fluid">
                                @Html.LabelFor(m => m.Name, new { @class = "span2" })
                            </div>
                            <div class="row-fluid">
                                @Html.TextBoxFor(m => m.Name)
                                @Html.ValidationMessageFor(m => m.Name)
                            </div>
                        </div>
                    </div>
                    <div class="form-row row-fluid">
                        <div class="span12">
                            <div class="row-fluid">
                                @Html.LabelFor(m => m.Value, new { @class = "span2" })
                            </div>
                            <div class="row-fluid">
                                @Html.TextBoxFor(m => m.Value)
                                @Html.ValidationMessageFor(m => m.Value)
                            </div>
                        </div>
                    </div>
                </div>
                <div class="span2">
                    &nbsp;</div>
            </div>
        </div>
    </div>
    <div class="modal-footer">
        <button type="submit" class="btn btn-mini btn-info" name="save" value="save">
            <span class="icon16 icomoon-icon-checkmark white"></span>@T("Common.Save")</button>
        <a href="#" class="btn btn-mini" data-dismiss="modal">@T("Common.Close")</a>
    </div>
}